<%- include('../partials/header') %>

<body>
  <h1 style="margin-bottom: 20px; font-family: Times New Roman, Times, serif">
    Item Categories
  </h1>
  <div class="catBox">
  <% categories.forEach(function(category) { %>
  <div class="category-box">
    <img src="<%= category.categoryImg %>" class="img-caterogy" style="display: inline;"/>
    <a class="categories-button" href="/categories/<%= category._id %>">
      <%= category.categoryName %>
    </a>
  </div>
  <% }); %>
</div>
</body>  
