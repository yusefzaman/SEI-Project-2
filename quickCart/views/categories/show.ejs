<%- include('../partials/header') %>

<body>
  <div class="box">
    <% items.forEach(item => { %>
    <div class="items-box">
      <div class="box-text">
        <img src="<%= item.itemImg %>" class="img-items" />
        <h4><a class="itemDetails" href="/categories/items/show/<%= item._id%>"><%= item.itemName %> Details</a></h4>
        <h4><%= item.itemPrice %> BHD</h4>
        <button class="categories-button">ADD TO CART</button>
      </div>
    </div>
    <% }); %>
  </div>
</body>
